<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Situação do aluno</title>
</head>
<body>
 <header>
    <h1>Situação do aluno</h1>
 </header>   
 <div>
<p><input type="button" value="Entrar com as notas" onclick="Notas()"></p>
<p>Clique no botão acima para informar as notas do aluno.</p>
 </div>
<div id="res">
</div>
<script>
    function Notas () {
        var nome = window.prompt('Qual é o nome do aluno?')
        var res = document.getElementById('res')
        if (isNaN(nome) && nome.length != 0) {
            var nota1 = window.prompt(`Primeira nota de ${nome}:`)
            if (!isNaN(Number(nota1)) && nota1.length != 0) {
                var n1 = Number(nota1)
                var nota2 = window.prompt(`Segunda nota de ${nome}:`)
                if (!isNaN(Number(nota2)) && nota2.length != 0) {
                    var n2 = Number(nota2)
                    var media = (n1+n2)/2
                    if (media < 3) {
                        res.innerHTML = `<h1>Analisando a situação de ${nome}</h1>` 
                        res.innerHTML += `<p>Com as notas ${n1} e ${n2} a<b> média é ${media}</b> </p>`
                        res.innerHTML += `<p>Com média abaixo de 3,0, o aluno está <mark style= "background-color: red;"><b>REPROVADO</b></mark></p>`                                        
                    } else if (media < 6) {
                        res.innerHTML = `<h1>Analisando a situação de ${nome}</h1>` 
                        res.innerHTML += `<p>Com as notas ${n1} e ${n2} a<b> média é ${media}</b> </p>`
                        res.innerHTML += `<p>Com média entre 3,0 e 6,0, o aluno está <mark style= "background-color: orange;"><b>RECUPERAÇÃO</b></mark></p>`
                    } else {
                        res.innerHTML = `<h1>Analisando a situação de ${nome}</h1>` 
                        res.innerHTML += `<p>Com as notas ${n1} e ${n2} a<b> média é ${media}</b> </p>`
                        res.innerHTML += `<p>Com média acima de 6,0, o aluno está <mark style= "background-color: green;"><b>APROVADO</b></mark></p>`
                    }
                } else {
                window.alert('[ERRO!], por favor digite um número válido.')                    
                }
            } else {
                window.alert('[ERRO!], por favor digite um número válido.')
            }
        } else {
            window.alert('[ERRO!], por favor digite um nome válido.')
        }
    }
</script>
</body>
</html>
